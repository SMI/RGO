@model IEnumerable<RGO.Models.Models.RGO_ReIdentificationConfiguration>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Re-Identification Configurations</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="RGO_ReIdentificationConfiguration" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New ReIdentification Configuration
                </a>
            </div>
        </div>


        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Server)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Database)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Table)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DeIdentifiedColumn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdentityColumn)
                    </th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/reidentification.js"></script>
}
