@model IEnumerable<RGO.Models.RGO_Evidence>

  <div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
         <div class="row">
              <div class="col-12 text-center">
                <h2 class="text-white py-2">RGOutput Evidence List</h2>
               </div>
          </div>
     </div>
     <div class="card-body p-4">
         <div class="row pb-3">
               <div class="col-6">
               </div>
               <div class="col-6 text-end">
                <a asp-controller="RGO_Evidence" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Associate Evidence with RG Outputs!
                    </a>
                </div>
         </div>


    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RGOutput)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Evidence)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StandardAcknowledgement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created_By)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Created_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated_By)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated_Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th></th>
            </tr>
        </thead>
    </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/rgo_evidence.js"></script>
}
